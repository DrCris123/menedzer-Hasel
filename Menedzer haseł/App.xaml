<Application x:Class="Menedzer_haseł.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Menedzer_haseł"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Styles for the Password Manager Application -->
        
        <!-- Font Resources -->
        <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>
        <FontFamily x:Key="MonospaceFont">Consolas</FontFamily>
        
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryRedBrush" Color="#DC143C"/>
        <SolidColorBrush x:Key="DarkRedBrush" Color="#8B0000"/>
        <SolidColorBrush x:Key="BlackBrush" Color="#000000"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1a1a1a"/>
        
        <!-- Global Button Style -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        
        <!-- Global TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- Global CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        
        <!-- Global Slider Style -->
        <Style TargetType="Slider">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        
        <!-- Global ProgressBar Style -->
        <Style TargetType="ProgressBar">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Border Name="PART_Track" 
                                       Background="{TemplateBinding Background}" 
                                       CornerRadius="10"/>
                                <Border Name="PART_Indicator" 
                                       Background="{TemplateBinding Foreground}" 
                                       HorizontalAlignment="Left" 
                                       CornerRadius="10"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Application.Resources>
</Application>
