<Window x:Class="Menedzer_haseł.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menedzer_haseł"
        mc:Ignorable="d"
        Title="Generator Haseł" Height="600" Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#000000" Offset="0"/>
            <GradientStop Color="#1a0000" Offset="0.3"/>
            <GradientStop Color="#330000" Offset="0.7"/>
            <GradientStop Color="#660000" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#DC143C" Offset="0"/>
                        <GradientStop Color="#8B0000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF6347" Offset="0"/>
                                            <GradientStop Color="#DC143C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#8B0000" Offset="0"/>
                                            <GradientStop Color="#660000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#DC143C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#DC143C"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundGradient}" CornerRadius="15">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="🔒" FontSize="32" Margin="0,0,10,0"/>
                <TextBlock Text="Generator Haseł" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <!-- Close Button -->
                <Button Content="✕" 
                       Width="30" Height="30" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Background="Transparent"
                       Foreground="#DC143C"
                       BorderThickness="0"
                       FontSize="16"
                       FontWeight="Bold"
                       Cursor="Hand"
                       Margin="80,0,0,0"
                       Click="CloseButton_Click"/>
            </StackPanel>
            
            <!-- Main Content -->
            <StackPanel Grid.Row="1">
                
                <!-- Password Display -->
                <Border Background="#1a1a1a" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Wygenerowane Hasło:" 
                                  Foreground="#DC143C" 
                                  FontWeight="Bold" 
                                  FontSize="14" 
                                  Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PasswordTextBox" 
                                    Style="{StaticResource ModernTextBox}"
                                    IsReadOnly="True"
                                    Grid.Column="0"
                                    Text="Kliknij 'Generuj' aby utworzyć hasło"/>
                            <Button Grid.Column="1" 
                                   Content="📋" 
                                   Style="{StaticResource ModernButton}"
                                   Width="40"
                                   Margin="10,0,0,0"
                                   ToolTip="Skopiuj do schowka"
                                   Click="CopyButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Settings -->
                <Border Background="#1a1a1a" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Ustawienia Hasła:" 
                                  Foreground="#DC143C" 
                                  FontWeight="Bold" 
                                  FontSize="14" 
                                  Margin="0,0,0,15"/>
                        
                        <!-- Length -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Długość:" 
                                      Foreground="White" 
                                      VerticalAlignment="Center"
                                      Grid.Column="0"
                                      Margin="0,0,10,0"/>
                            <Slider x:Name="LengthSlider" 
                                   Grid.Column="1"
                                   Style="{StaticResource ModernSlider}"
                                   Minimum="4" 
                                   Maximum="128" 
                                   Value="16"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="LengthSlider_ValueChanged"/>
                            <TextBlock x:Name="LengthLabel" 
                                      Text="16" 
                                      Foreground="#DC143C"
                                      FontWeight="Bold"
                                      Grid.Column="2"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0"/>
                        </Grid>
                        
                        <!-- Options -->
                        <UniformGrid Columns="2" Rows="2">
                            <CheckBox x:Name="UppercaseCheckBox" 
                                     Content="Wielkie litery (A-Z)" 
                                     Style="{StaticResource ModernCheckBox}"
                                     IsChecked="True"
                                     Margin="0,5"/>
                            <CheckBox x:Name="LowercaseCheckBox" 
                                     Content="Małe litery (a-z)" 
                                     Style="{StaticResource ModernCheckBox}"
                                     IsChecked="True"
                                     Margin="0,5"/>
                            <CheckBox x:Name="NumbersCheckBox" 
                                     Content="Cyfry (0-9)" 
                                     Style="{StaticResource ModernCheckBox}"
                                     IsChecked="True"
                                     Margin="0,5"/>
                            <CheckBox x:Name="SymbolsCheckBox" 
                                     Content="Symbole (!@#$...)" 
                                     Style="{StaticResource ModernCheckBox}"
                                     IsChecked="True"
                                     Margin="0,5"/>
                        </UniformGrid>
                        
                        <!-- Exclude Similar -->
                        <CheckBox x:Name="ExcludeSimilarCheckBox" 
                                 Content="Wyklucz podobne znaki (0, O, l, 1)" 
                                 Style="{StaticResource ModernCheckBox}"
                                 IsChecked="False"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Password Strength -->
                <Border Background="#1a1a1a" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Siła Hasła:" 
                                  Foreground="#DC143C" 
                                  FontWeight="Bold" 
                                  FontSize="14" 
                                  Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ProgressBar x:Name="StrengthProgressBar" 
                                        Grid.Column="0"
                                        Height="20" 
                                        Background="#333333"
                                        Foreground="#DC143C"
                                        Value="0"/>
                            <TextBlock x:Name="StrengthLabel" 
                                      Grid.Column="1"
                                      Text="Słabe" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
            </StackPanel>
            
            <!-- Generate Button -->
            <Button Grid.Row="2" 
                   Content="🔄 GENERUJ NOWE HASŁO" 
                   Style="{StaticResource ModernButton}"
                   FontSize="16"
                   Padding="20,12"
                   Margin="0,20,0,0"
                   Click="GenerateButton_Click"/>
        </Grid>
    </Border>
</Window>
